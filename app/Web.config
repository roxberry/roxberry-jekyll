<?xml version="1.0"?>
 
<configuration>
    <system.webServer>
        <staticContent>
            <mimeMap fileExtension=".json" mimeType="application/json" />
            <clientCache cacheControlCustom="public" cacheControlMode="UseMaxAge" cacheControlMaxAge="365.00:00:00" />
     </staticContent>
         <rewrite>
            <rules>
                <rule name="NAME" stopProcessing="true">
                    <match url=".*" />
                    <conditions logicalGrouping="MatchAny">
                    <add input="{HTTP_HOST}{REQUEST_URI}" pattern="(.*)/shop/(.*)" />
                    </conditions>
                    <action type="Redirect" appendQueryString="false" url="https://dev03-na01-adt.demandware.net/shop" redirectType="Permanent" />
                </rule>
            </rules>
        </rewrite>
    </system.webServer>
</configuration> 